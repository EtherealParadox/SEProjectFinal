<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#079BF5"
    tools:context=".AdminProfile">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="183dp"
            android:layout_gravity="top"
            android:layout_marginBottom="35dp"
            android:src="@drawable/imagebg"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="49dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded2"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="190dp">

            <LinearLayout
                android:id="@+id/linearLayoutModifyAdm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageViewModify"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_viewlist" />

                <Button
                    android:id="@+id/buttonModifyAdm"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:text="Modify"
                    android:background="@drawable/btn_bg"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutLogsAdm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayoutModifyAdm"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageViewLogs"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_logs" />

                <Button
                    android:id="@+id/buttonLogsAdm"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:text="Logs"
                    android:background="@drawable/btn_bg"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutReportsAdm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayoutLogsAdm"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageViewReports"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_mail" />

                <Button
                    android:id="@+id/buttonReportsAdm"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:text="Reports"
                    android:background="@drawable/btn_bg"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="19.7sp" />

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/buttonLogoutAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@drawable/btn_bg"
            android:text="Logout"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>