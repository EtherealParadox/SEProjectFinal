<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeProfile">


    <ImageView
        android:id="@+id/imageViewLocate"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:layout_toLeftOf="@id/buttonLocateEmp"
        app:layout_constraintEnd_toStartOf="@+id/buttonLocateEmp"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewModify"
        app:srcCompat="@drawable/ic_locate" />

    <Button
        android:id="@+id/buttonLocateEmp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="68dp"
        android:text="Locate"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonModifyEmp" />

    <ImageView
        android:id="@+id/imageViewModify"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginStart="102dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="24dp"
        android:layout_toLeftOf="@id/buttonModifyEmp"
        app:layout_constraintEnd_toStartOf="@+id/buttonModifyEmp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_viewlist" />

    <Button
        android:id="@+id/buttonModifyEmp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="72dp"
        android:text="Modify"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>