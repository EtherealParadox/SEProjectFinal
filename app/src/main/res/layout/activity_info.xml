<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#079BF5"
    tools:context=".Info">

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Information"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewInfo2"
        android:layout_width="322dp"
        android:layout_height="484dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:justificationMode="inter_word"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="The Log &amp; Trace Me application is a contact tracing logbook system that operates every day and stores information about Bataan Terminal Complexâ€™s visitors. Each visitors are required to enter their name, email, address, age, gender, destination, temperature, and contact number upon entering the terminal. The given information will be needed to identify potential close contacts of a coronavirus-infected person who visited the terminal on the same day and time. Thus, trace and notify the visitors immediately. This will help organizations, particularly the health department and LGUs, in minimizing the spread of COVID-19. \n    We guarantee that the information entered into this system is safeguarded."
        android:textColor="#000000"
        android:textSize="16.5sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo" />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#000"
        android:background="@drawable/btn_bg"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo2" />

    <TextView
        android:id="@+id/textViewSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Skip"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toEndOf="@+id/textViewInfo"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>