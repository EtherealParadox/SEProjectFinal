<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/textViewEmailLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email is here"
            android:textSize="17sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#808080"
            android:background="@drawable/top_rounded"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDateLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date is here"
            android:textSize="17sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#808080"
            android:background="@color/teal_200"
            android:textStyle="bold"
            android:layout_below="@+id/textViewEmailLog"/>

        <TextView
            android:id="@+id/textViewTimeLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time is here"
            android:textSize="17sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#808080"
            android:background="@color/teal_200"
            android:textStyle="bold"
            android:layout_below="@+id/textViewDateLog"/>

        <TextView
            android:id="@+id/textViewStatusLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status is here"
            android:textSize="17sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#808080"
            android:background="@drawable/bottom_rounded"
            android:textStyle="bold"
            android:layout_below="@+id/textViewTimeLog"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>