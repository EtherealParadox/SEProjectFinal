<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardBackgroundColor="#091349"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/textViewEmailRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_rounded"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Email is here"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDateRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewEmailRep"
            android:background="#66CCFF"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Date is here"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTimeRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDateRep"
            android:background="@drawable/bottom_rounded3parts"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Time is here"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_below="@id/textViewTimeRep">

            <Button
                android:id="@+id/buttonViewRep"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/super_rounded"
                android:text="View Report"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="17sp" />

            <Button
                android:id="@+id/buttonDeleteRep"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/super_rounded"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>