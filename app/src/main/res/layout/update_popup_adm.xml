<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#079BF5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#020b42"
                android:gravity="center"
                android:text="Update Details"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="First Name"
                android:textColor="#000000"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editTextFNameGlideAdm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_frame"
                android:gravity="center"
                android:textColor="#000000"
                android:textCursorDrawable="@color/black"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Last Name"
                android:textColor="#000000"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editTextLNameGlideAdm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_frame"
                android:gravity="center"
                android:textColor="#000000"
                android:textCursorDrawable="@color/black"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="User Name"
                android:textColor="#000000"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editTextUNameGlideAdm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_frame"
                android:gravity="center"
                android:textColor="#000000"
                android:textCursorDrawable="@color/black"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnUpdateAdm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="90dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/super_rounded"
                android:text="Update"
                android:textColor="#000000"
                android:textSize="26dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>